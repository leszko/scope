[Desktop Entry]
Name=DaydreamScope
Comment=Real-time AI video generation and streaming
GenericName=AI Video Generator
Exec=daydream-scope %U
Icon=daydream-scope
Type=Application
StartupNotify=true
Categories=Utility;AudioVideo;
MimeType=x-scheme-handler/daydream-scope;
Keywords=AI;Video;Streaming;Generation;

# Desktop actions (right-click menu)
Actions=ShowLogs;

[Desktop Action ShowLogs]
Name=Logs
Exec=daydream-scope --show-logs
